
<%-include("./partials/head")%>

<!-- productos -->
<main class="main-container">

  <section class="shop container">

    <!-- buscador -->
    <aside class="shop_buscador">

      <form action="" class="form">

        <div class="form__col">
          <label class="form__label" for="buscar_producto">BUSCAR</label>
          <input class="form__control" type="text" id="buscar_producto" name="buscar" placeholder="item o categoría">
        </div>

        <div class="form__col">

          <label class="form__label" for="buscardor-ordenar">ORDENAR</label>

          <select class="form__control" name="ordenar" id="buscardor-ordenar">
            <option value="mayor">Alfabético A-Z</option>
            <option value="mayor">Alfabético Z-A</option>
            <option value="mayor">Precio de Mayor a Menor</option>
            <option value="menor">Precio de Menor a Mayor</option>
          </select>

        </div>

        <div class="form__col">

          <label>PRECIO</label>

          <div class="form__row">
            <label class="form__label" for="buscador-precio_minimo">MIN</label>
            <input class="form__control" type="number" name="precio_minimo" id="buscador-precio_minimo" min="1" placeholder="0">
            <span class="margin-1">-</span>
            <label class="form__label" for="buscador-precio_maximo">MAX</label>
            <input class="form__control" type="number" name="precio_maximo" id="buscador-precio_maximo" min="1" placeholder="0">
          </div>

        </div>

        <div class="form__col">
          
          <label>FILTRAR</label>

          <ul class="check__list">
            <li class="check__item">
              <input class="form__control" type="checkbox" name="nuevo" id="buscador-filtro_nuevo">
              <label class="form__label" for="buscador-filtro_nuevo">NUEVOS</label>
            </li>
            <li class="check__item">
              <input class="form__control" type="checkbox" name="oferta" id="buscador-filtro_oferta">
              <label class="form__label" for="buscador-filtro_oferta">OFERTAS</label>
            </li>
            <li class="check__item">
              <input class="form__control" type="checkbox" name="edicion" id="buscador-filtro_edicion">
              <label class="form__label" for="buscador-filtro_edicion">EDICIÓN ESPECIAL</label>
            </li>
            <li class="check__item">
              <input class="form__control" type="checkbox" name="favorito" id="buscador-filtro_favorito">
              <label class="form__label" for="buscador-filtro_favorito">FAVORITOS</label>
            </li>
          </ul>
        </div>

      </form>

    </aside>      

    <!-- articulos por producto -->
    <section class="pagination separate-1">

      <!-- Grilla de 3 x 3 -->
      <ul class="pagination__list">

        <% for( const Product in products ){ %>

        <li class="pagination__item">
          
          <article class="card">

            <a class="card__link" href="">

              <picture class="card__cover">
                <span class="card__tag">Nuevo</span>
                <img class="card__img--front" src="./img<%=Product.img_front%>" alt="imagen del producto de lado frontal">
                <img class="card__img--back" src="./img<%=Product.img_back%>" alt="imagen del producto de lado posterior">
              </picture>

              <div class="card__content">
                <p class="card__licence"><%=Product.licence%></p>
                <h4 class="card__name"><%=Product.name%></h3>
                <p class="card__price">$<%=Product.price.toLocalString('es', { style:"currency" })%></p>
                <p class="card__promo"><%=Product.Cuotas.name%></p>
              </div>

            </a>

          </article>
        </li>

        <% } %>
     
      </ul>

      <!-- paginación -->
      <form action="" class="pagination__controls">
        <button type="button" class="pagination_button" disabled><</button>
        <button type="button" class="pagination_button active">1</button>
        <button type="button" class="pagination_button">2</button>
        <span class="pagination_button">...</span>
        <button type="button" class="pagination_button">9</button>
        <button type="button" class="pagination_button">10</button>
        <button type="button" class="pagination_button">></button>
      </form>        

    </section>

  </section>

</main>

<%-include("./partials/foot")%>